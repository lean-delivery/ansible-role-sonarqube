[Unit]
Description=SonarQube Server
After=network.target network-online.target
Wants=network-online.target

[Service]
LimitNOFILE={{ sonar_nofile }}
LimitNPROC={{ sonar_nproc }}
WorkingDirectory={{ sonar_installation }}/bin/{{ ansible_facts.system | lower }}-{{ arch }}
ExecStart={{ sonar_installation }}/bin/{{ ansible_facts.system | lower }}-{{ arch }}/sonar.sh start
ExecStop={{ sonar_installation }}/bin/{{ ansible_facts.system | lower }}-{{ arch }}/sonar.sh stop
ExecReload={{ sonar_installation }}/bin/{{ ansible_facts.system | lower }}-{{ arch }}/sonar.sh restart
PIDFile={{ sonar_installation }}/bin/{{ ansible_facts.system | lower }}-{{ arch }}/SonarQube.pid
Type=forking
User={{ sonar_user }}
StartLimitInterval=30

[Install]
WantedBy=multi-user.target
